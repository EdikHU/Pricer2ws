<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/price_list_btn_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/price_list_btn_new" />

    <Button
        android:id="@+id/price_list_btn_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/price_list_btn_modify" />

    <DatePicker
        android:id="@+id/price_list_date"
        android:layout_width="match_parent"
        android:layout_height="178dp" />

    
    <TextView
        android:id="@+id/price_list_cost_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_list_cost_lbl" />

    <EditText
        android:id="@+id/price_list_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:inputType="text">

        <requestFocus />
    </EditText>

    
    
    
    <TextView
        android:id="@+id/price_list_shop_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_list_shop_lbl" />

    <TextView
        android:id="@+id/price_list_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    
    
    
    <ListView
        android:id="@+id/price_list_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
