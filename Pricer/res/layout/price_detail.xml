<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <sed.pricer.modview.ButtonDate
        android:id="@+id/price_detail_btn_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />

    
    <TextView
        android:id="@+id/price_detail_cost_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_detail_cost_lbl" />

    <EditText
        android:id="@+id/price_detail_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:inputType="text">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/price_detail_shop_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/price_detail_shop_lbl" />

    <TextView
        android:id="@+id/price_detail_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick" />

    <Button
        android:id="@+id/price_detail_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/btn_Ok" />

    <Button
        android:id="@+id/price_detail_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/btn_Cancel" />

</LinearLayout>
